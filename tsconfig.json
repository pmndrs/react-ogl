{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "ESNext",
    "lib": ["ESNext", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "react-ogl": ["./src"]
    }
  }
}
